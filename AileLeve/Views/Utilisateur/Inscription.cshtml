
@{
    ViewBag.Title = "Inscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Inscription</h1>


<div class="container">
    <form action="/Utilisateur/Inscription" method="post">
        <div class="form-group">
            <label for="Nom">Nom</label>
            <input type="text" class="form-control" name="nom" id="NomForm" placeholder="Nom" required>            
        </div>
        <div class="form-group">
            <label for="Prenom">Prénom</label>
            <input type="text" class="form-control" name="prenom" id="PrenomForm" placeholder="Prénom" required>
        </div>   
        <div class="form-group">
            <label for="Identifiant">Identifiant</label>
            <input type="text" class="form-control" name="identifiant" id="IdentifiantForm" placeholder="Identifiant">
        </div>       
        <div class="form-group">
            <label for="Identifiant">Mot de passe</label>
            <input type="password" class="form-control" name="password" id="PasswordForm" placeholder="Mot de passe" required>
        </div>   
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="EmailForm" placeholder="Email" required>
        </div> 

        <button type="submit" class="btn">Enregistrer</button>
    </form>
</div>
