@model AileLeve.Models.Profil
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modifier Profil</title>
</head>

<body>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Modifier un profil : </legend>
            @Html.LabelFor(m => Model.Email)
            @Html.TextBoxFor(m => Model.Email,new {@type="email"})
            @Html.ValidationMessageFor(m => Model.Email)
            <br />
            @Html.LabelFor(m => Model.Telephone)
            @Html.TextBoxFor(m => Model.Telephone)
            @Html.ValidationMessageFor(m => Model.Telephone)
            <br />
            @Html.LabelFor(m => Model.Image)
            @Html.TextBoxFor(m => Model.Image)
            @Html.ValidationMessageFor(m => Model.Image)
            <br />
            <input type="submit" value="Modifier" />
        </fieldset>
    }
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>

</html>